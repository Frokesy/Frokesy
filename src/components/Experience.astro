---
const { data } = Astro.props

console.log("hello world", data)
---

<div class="px-4 pt-20">
    <h2 class="text-[32px] font-semibold">Experience</h2>

    <div class="card mt-10">
        <div class="flex justify-between items-center">
            <p class="text-[#7f8ea2] text-[14px] font-semibold">{data.duration}</p>
            <p>{data.title} - {data.company}</p>
        </div>
        <p class="text-[15px] font-light pt-4 text-[#7f8ea2]">{data.desc}</p>
        <div class="">
            <ul class="grid grid-cols-4 gap-x-4 py-6">
                {data.tags.map((tech) => (
                    <li class="bg-[#142f4b] text-[#54d1c4] text-[14px] font-semibold text-center py-2 rounded-[50px]">{tech}</li>
                ))}
            </ul>
        </div>
    </div>
</div>

